# Production Environment Configuration
# DO NOT commit actual secrets - use platform environment variables

#===========================================
# APPLICATION
#===========================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=warning

#===========================================
# SUPABASE
#===========================================
NEXT_PUBLIC_SUPABASE_URL=https://production-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=[SET_IN_VERCEL]
SUPABASE_SERVICE_ROLE_KEY=[SET_IN_RAILWAY]

#===========================================
# TEMPORAL
#===========================================
TEMPORAL_ADDRESS=prod.tmprl.cloud:7233
TEMPORAL_NAMESPACE=orion-prod
TEMPORAL_TASK_QUEUE=orion-prod

#===========================================
# API CONFIGURATION
#===========================================
API_BASE_URL=https://api-prod.railway.app
NEXT_PUBLIC_API_URL=https://api-prod.railway.app

#===========================================
# ENCRYPTION
#===========================================
ENCRYPTION_KEY=[SET_IN_RAILWAY]

#===========================================
# EXTERNAL SERVICES (Production Keys)
#===========================================
STRIPE_API_KEY=[SET_IN_RAILWAY]
HUBSPOT_API_KEY=[SET_IN_RAILWAY]

#===========================================
# CORS
#===========================================
ALLOWED_ORIGINS=https://orion-ai.vercel.app

#===========================================
# RATE LIMITING
#===========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

#===========================================
# MONITORING
#===========================================
SENTRY_DSN=[OPTIONAL]
SENTRY_ENVIRONMENT=production

#===========================================
# SECURITY
#===========================================
FORCE_HTTPS=true
SECURE_COOKIES=true
HSTS_MAX_AGE=31536000
