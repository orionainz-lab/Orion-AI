# Staging Environment Configuration
# DO NOT commit actual secrets - use platform environment variables

#===========================================
# APPLICATION
#===========================================
ENVIRONMENT=staging
DEBUG=true
LOG_LEVEL=info

#===========================================
# SUPABASE
#===========================================
NEXT_PUBLIC_SUPABASE_URL=https://staging-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=[SET_IN_VERCEL]
SUPABASE_SERVICE_ROLE_KEY=[SET_IN_RAILWAY]

#===========================================
# TEMPORAL
#===========================================
TEMPORAL_ADDRESS=staging.tmprl.cloud:7233
TEMPORAL_NAMESPACE=orion-staging
TEMPORAL_TASK_QUEUE=orion-staging

#===========================================
# API CONFIGURATION
#===========================================
API_BASE_URL=https://api-staging.railway.app
NEXT_PUBLIC_API_URL=https://api-staging.railway.app

#===========================================
# ENCRYPTION
#===========================================
ENCRYPTION_KEY=[SET_IN_RAILWAY]

#===========================================
# EXTERNAL SERVICES (Test Keys)
#===========================================
STRIPE_API_KEY=[SET_IN_RAILWAY]
HUBSPOT_API_KEY=[SET_IN_RAILWAY]

#===========================================
# CORS
#===========================================
ALLOWED_ORIGINS=https://orion-ai-staging.vercel.app

#===========================================
# RATE LIMITING
#===========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100

#===========================================
# MONITORING
#===========================================
SENTRY_DSN=[OPTIONAL]
SENTRY_ENVIRONMENT=staging
