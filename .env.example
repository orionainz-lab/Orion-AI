# Phase 1: Environment Configuration Template
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ===========================================
# TEMPORAL CONFIGURATION
# ===========================================
# Local development (Docker Compose)
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=default

# Production (Temporal Cloud) - uncomment when ready
# TEMPORAL_HOST=your-namespace.tmprl.cloud:7233
# TEMPORAL_NAMESPACE=your-namespace
# TEMPORAL_API_KEY=your-api-key

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Temporal's PostgreSQL (Docker Compose)
TEMPORAL_DB_HOST=localhost
TEMPORAL_DB_PORT=5432
TEMPORAL_DB_USER=temporal
TEMPORAL_DB_PASSWORD=temporal
TEMPORAL_DB_NAME=temporal

# Supabase (for business data)
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# ===========================================
# APPLICATION SETTINGS
# ===========================================
# Environment: development | staging | production
ENV=development

# Logging level: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO

# Workflow settings
DEFAULT_WORKFLOW_TIMEOUT_SECONDS=86400  # 24 hours
CHAOS_TEST_SLEEP_SECONDS=5              # Configurable for testing

# ===========================================
# DOCKER CONFIGURATION (optional overrides)
# ===========================================
# TEMPORAL_VERSION=latest
# POSTGRES_VERSION=15
